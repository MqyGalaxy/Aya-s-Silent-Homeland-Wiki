<script is:inline define:vars={{ searchIndex }}>
    const input = document.getElementById('wikiSearchInput');
    const dropdown = document.getElementById('searchDropdown');
    
    // 1. 监听输入
    input.addEventListener('input', (e) => {
        const term = e.target.value.trim().toLowerCase();
        
        if (term.length === 0) {
            dropdown.classList.remove('show');
            return;
        }

        const results = searchIndex.filter(item => {
            return (
                item.title.toLowerCase().includes(term) || 
                item.id_code.toLowerCase().includes(term)
                // 去掉了 description 的搜索，如果您希望搜内容但不显示，可以保留下一行
                // || item.desc.toLowerCase().includes(term)
            );
        }).slice(0, 8);

        if (results.length > 0) {
            // 修改点：HTML 结构大幅简化，只保留 Title 和 Meta
            dropdown.innerHTML = results.map(item => `
                <a href="/wiki/${item.slug}" class="result-item">
                    <span class="res-title">${item.title}</span>
                    <span class="res-meta">${item.id_code} // ${item.category}</span>
                </a>
            `).join('');
        } else {
            dropdown.innerHTML = `<div class="no-result">NO MATCHING DATA FOUND</div>`;
        }

        dropdown.classList.add('show');
    });

    // 2. 点击外部关闭
    document.addEventListener('click', (e) => {
        if (!input.contains(e.target) && !dropdown.contains(e.target)) {
            dropdown.classList.remove('show');
        }
    });

    // 3. 聚焦时重新显示
    input.addEventListener('focus', () => {
        if (input.value.trim().length > 0) {
            dropdown.classList.add('show');
        }
    });
</script>