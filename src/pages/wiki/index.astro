    .wiki-info { padding: 20px; flex: 1; display: flex; flex-direction: column; justify-content: center; }
    .wiki-meta { font-family: var(--font-tech); font-size: 0.7rem; margin-bottom: 8px; display: flex; justify-content: space-between; border-bottom: 1px solid rgba(255,255,255,0.1); padding-bottom: 5px; }
