---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/layout/Header.astro';
import Footer from '../../components/layout/Footer.astro';

// 1. 获取数据
const allWiki = await getCollection('wiki');
const randomPicks = allWiki.sort(() => 0.5 - Math.random()).slice(0, 3);

// 2. 构建轻量级搜索索引 (传给前端 JS 使用)
const searchIndex = allWiki.map(item => ({
    title: item.data.title,
    category: item.data.category,
    id_code: item.data.id_code || 'N/A',
    slug: item.slug,
    desc: item.data.description || ''
}));

const categories = [
    { id: 'CHARACTER', label: '人物档案', code: 'OP' },
    { id: 'WEAPON', label: '武器库', code: 'WP' },
    { id: 'ITEM', label: '物资道具', code: 'IT' },
    { id: 'STORY', label: '剧情记录', code: 'ST' },
    { id: 'TUTORIAL', label: '教程', code: 'TU' },
];
---

<Layout title="139号避难所数据查询中心 - WIKI - 射命丸文的寂静的故乡 / Shameimaru Aya's Silent Homeland">
    <Header />

    <main class="wiki-home">
        <div class="wiki-header">
            <div class="header-inner">
                <h1 class="wiki-title">DATABASE /// 资料库</h1>
                
                <div class="search-container">
                    <div class="search-input-wrapper">
                        <div class="search-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>
                        </div>
                        <input type="text" id="wikiSearchInput" placeholder="TYPE KEYWORDS TO SEARCH..." autocomplete="off" />
                        <div class="search-corner-deco"></div>
                    </div>

                    <div id="searchDropdown" class="search-dropdown">
                        </div>
                </div>

            </div>
        </div>

        <div class="wiki-content-wrapper">
            <section class="category-section">
                <div class="section-label">/// ACCESS CATEGORY</div>
                <div class="cat-grid">
                    {categories.map(cat => (
                        <a href={`/wiki/category/${cat.id}`} class="cat-card">
                            <div class="cat-code">[{cat.code}]</div>
                            <div class="cat-name">{cat.label}</div>
                            <div class="cat-count">{allWiki.filter(w => w.data.category === cat.id).length} ENTRIES</div>
                        </a>
                    ))}
                </div>
            </section>

            <section class="featured-section">
                <div class="section-label">/// RANDOM ACCESS MEMORY</div>
                <div class="wiki-list">
                    {randomPicks.map(item => (
                        <a href={`/wiki/${item.slug}`} class="wiki-item">
                            <div class="wiki-thumb" style={`background-image: url(${item.data.cover || 'https://placehold.co/200x200/222/333?text=NO+IMG'})`}></div>
                            <div class="wiki-info">
                                <div class="wiki-meta">
                                    <span class="wiki-tag">{item.data.category}</span>
                                    {item.data.id_code && <span class="wiki-id">{item.data.id_code}</span>}
                                </div>
                                <h3 class="wiki-name">{item.data.title}</h3>
                                <p class="wiki-desc">{item.data.description}</p>
                            </div>
                        </a>
                    ))}
                </div>
            </section>
        </div>
    </main>

    <Footer />
</Layout>

